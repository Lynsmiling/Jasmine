<div class="row devise-back">
  <div class="col-md-4  col-md-offset-4">
    <div class="auth">
      <div id="big-form" class="well auth-box">
        <h1 class="text-center">登录</h1>
        <hr>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,  :label => '邮箱', placeholder: 'E-mail',required: false, autofocus: true %>
            <%= f.input :password,:label => '密码', placeholder: 'Password', required: false %>
            <%= f.input :remember_me, :label => "记住我", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <span><%= f.button :submit, "登录" %></span>
            <br/><br/>
          <span><%= link_to "忘记密码？", new_password_path(resource_name), class: "psw" %></span>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
